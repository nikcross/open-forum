icon = extension.getAttribute("icon");

if(icon!=null) {
  img = "/OpenForum/Images/icons/png/"+icon+".png";
}

if(img!=null) {
  var alt = "";
  if(text!=null) {
    alt = text;
  }
  text = "<img src='" + img + "' alt='" + alt + "' title='" + alt + "' />";
}

var idHtml = "";
if(id!=null) idHtml = "id = '"+ id +"'";

if(parameters==null) {
  parameters = "";
} else {
  var parts = (""+parameters).split(",");
  parameters = "";
  for(var part in parts) {
    if(parameters.length>0) parameters += ",";
    parameters += "<br/>""+parts<a href="/OpenForum/Editor?pageName=/OpenForum/Extensions/ActionButton/part"target="editor" style="color: red" title="The page /OpenForum/Editor?pageName=/OpenForum/Extensions/ActionButton/part does not exist. Click to create it.">part</a>+"<br/>"";
  }
}
//return "<a class='button' href='#' onclick='"+action+"(); return false;'>"+text+"</a>";
return "<a " + idHtml + " class='button radius tiny' href='#' onclick='"+action+"("+parameters+"); return false;'>"+text+"</a> ";
