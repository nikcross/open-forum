{
    "version": "0.0.3",
    "configFile": "extension-config.json",
    "pageName": "/OpenForum/Extensions/CTABanner",
    "template": {
        "pageName": "/OpenForum/Extensions/CTABanner",
        "fileName": "ctabanner.html.template"
    },
    "buildReferencePage": true,
    "buildBlockEditor": true,
    "parameters": [
        {
            "name": "imageURL",
            "required": true,
            "view": "display: block;",
            "edit": "display: none;",
            "exampleValue": "/OpenForum/Images/open-forum-dog-small.png",
            "defaultValue": "/OpenForum/Images/open-forum-dog-small.png"
        },
        {
            "name": "title",
            "required": true,
            "view": "display: block;",
            "edit": "display: none;",
            "exampleValue": "Call To Action",
            "defaultValue": "Call To Action"
        },
        {
            "name": "text",
            "required": true,
            "view": "display: none;",
            "edit": "display: block;",
            "exampleValue": "A description of the CTA",
            "defaultValue": "A description of the CTA"
        },
        {
            "name": "ctaText",
            "exampleValue": "Click Me",
            "defaultValue": "Click Me",
            "required": true,
            "view": "display: block;",
            "edit": "display: none;"
        },
        {
            "name": "ctaURL",
            "exampleValue": "http://www.bbc.co.uk",
            "defaultValue": "http://www.bbc.co.uk",
            "required": true,
            "view": "display: block;",
            "edit": "display: none;"
        }
    ],
    "blockEditor": {
        "name": "CTABanner",
        "icon": "flag_blue"
    },
    "buildRenderer": true
}