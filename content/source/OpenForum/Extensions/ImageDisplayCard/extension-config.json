{
    "version": "0.0.3",
    "configFile": "extension-config.json",
    "pageName": "/OpenForum/Extensions/ImageDisplayCard",
    "template": {
        "pageName": "/OpenForum/Extensions/ImageDisplayCard",
        "fileName": "image-display-card.html.template"
    },
    "buildReferencePage": true,
    "buildBlockEditor": true,
    "parameters": [
        {
            "name": "title",
            "required": true,
            "view": "display: none;",
            "edit": "display: block;",
            "exampleValue": "Open Forum",
            "defaultValue": ""
        },
        {
            "name": "description",
            "required": true,
            "view": "display: block;",
            "edit": "display: none;",
            "exampleValue": "Open Forum - The Future",
            "defaultValue": ""
        },
        {
            "name": "linkText",
            "required": true,
            "view": "display: block;",
            "edit": "display: none;",
            "exampleValue": "Open Forum",
            "defaultValue": ""
        },
        {
            "name": "linkURL",
            "required": true,
            "view": "display: block;",
            "edit": "display: none;",
            "exampleValue": "https://open-forum.onestonesoup.org/",
            "defaultValue": ""
        },
        {
            "name": "imageURL",
            "required": true,
            "view": "display: block;",
            "edit": "display: none;",
            "exampleValue": "/OpenForum/Images/open-forum-dog-small.png",
            "defaultValue": ""
        }
    ],
    "blockEditor": {
        "name": "Image Display Card",
        "icon": "photo"
    },
    "buildRenderer": true
}