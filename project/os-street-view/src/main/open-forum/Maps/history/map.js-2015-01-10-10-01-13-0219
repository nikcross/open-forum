var canvas;
var offsetX = 0;
var offsetY = 0;

function initMap() {
  canvas =new Canvas("mapCanvas");
  
            canvas.canvasContext.strokeStyle = 'red';
            canvas.canvasContext.lineWidth = 2;

            // Fill the path
            canvas.canvasContext.fillStyle = "#9ea7b8";
            canvas.canvasContext.fillRect(0,0,w,h);
  
  Giraffe.Interactive.setInteractive(canvas);
  Giraffe.setAnimated(canvas);
  canvas.startAnimation(20,100,true);
  
  //  map = new Composite((screenWidth/2)-5000,(screenHeight/2)-5000);
  offsetX = (screenWidth/2)-5000;
  offsetY = (screenHeight/2)-5000;
  //offsetX = -100;
  //offsetY = -100;
  console.log(screenWidth);
  console.log(screenHeight);
  console.log(offsetX);
  console.log(offsetY);
  
  tile1 = new Picture(offsetX,offsetY,"/Maps/OSStreetView/Norfolk-Street-View/tf03nw.png");
  tile2 = new Picture(offsetX+5000,offsetY,"/Maps/OSStreetView/Norfolk-Street-View/tf03ne.png");
  tile3 = new Picture(offsetX,offsetY+5000,"/Maps/OSStreetView/Norfolk-Street-View/tf03sw.png");
  tile4 = new Picture(offsetX+5000,offsetY+5000,"/Maps/OSStreetView/Norfolk-Street-View/tf03se.png");
  
  map = new Composite(0,0);
  
  map.add(tile1);
  map.add(tile2);
  canvas.add(map);
  canvas.makeDraggable(map);
}