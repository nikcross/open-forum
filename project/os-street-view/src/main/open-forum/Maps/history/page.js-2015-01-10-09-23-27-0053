OpenForum.init = function() {
  var canvas = document.getElementById("mapCanvas");
  
  var w = window,
    d = document,
    e = d.documentElement,
    g = d.getElementsByTagName('body')[0],
    x = w.innerWidth || e.clientWidth || g.clientWidth,
    y = w.innerHeight|| e.clientHeight|| g.clientHeight;
  
  canvas.width=x;
  canvas.height=y;
  
  initMap();
};